  line-height: 90rpx;
}
.marginIop100{
  margin-top:100rpx; 
}
.but{
  margin: 40rpx auto;
}
.inputStyle{
  position: relative;
  background:rgba(255,255,255,1);
  border:1px solid rgba(220,220,220,1);
  border-radius:6px;
  font-size:15px;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(102,102,102,1);
}
.inputStyleSon{
  position: relative;
}
.inputStyleSon::after{
  position: absolute;
  content: "";
  border-right: 1rpx solid rgba(210, 210, 210, 1);
  height: 17px;
  top: 50%;
  right: 5px;
  margin-top:-8.5rpx;
}
