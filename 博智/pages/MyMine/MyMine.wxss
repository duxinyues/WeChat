/* pages/MyMine/MyMine.wxss */
@import '../communal/communal.wxss';
page{
  background-color:#fff;
}

.user-info{
  display: flex;
  flex-direction:row;
  justify-content:center;
  border-radius: 6px;
  overflow: hidden;
  width: 94%;
  height: 100%;
  position: absolute;
  bottom: -30rpx;
  background: #fff;
}

.user-info-left{
  min-width: 156rpx;
  width: 25%;
}
.user-name{
  width: 65%;
}
.more{
  width: 10%;
}
.MyApp{
  margin-left: 3%;
  margin-right:3%; 
  margin-top: 45rpx;
  margin-bottom:20rpx; 
  padding: 30rpx 25rpx;
  padding-bottom: 30rpx;
  border-radius: 6px;
  display: flex;
  justify-content: space-between;
}
.MyApp-Content{
  font-size: 12px;
  line-height: 21px;
}
.MyApp-Content image{
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 18rpx;
}
.MyMine2{
  width: 40rpx;
  height: 40rpx;
}
button::after {
  border: none
}
.skip-bag{
  width: 18rpx;
  height: 34rpx;
}
.skip-small{
  width: 12rpx;
  height: 22rpx;
}

.head-info{
  position: relative;
  width: 100%;
  height: 240rpx;
}
.user-info-left{position: relative;}
.user-label{position: absolute;left:120rpx;bottom: 60rpx;width: 34rpx;height: 34rpx;}
.userName{
  font-size:18px;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:21px;
  margin-bottom: 18rpx;
}
.userPost{
  font-size:12px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:21px;
}
.myFont{display: flex;justify-content: space-between;}
.myFont text{
  font-size:15px;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:21px;
}
.box-shadow4{
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 7px 0px rgba(204,204,204,0.48);
  border-radius:6px;
}
.autonym::after{
  content: "实名认证";
  font-size:10px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,102,255,1);
  line-height:21px;
  background-color: yellow;
  padding: 1px 6px;
  background:rgba(70,106,248,0.24);
  border:1px solid rgba(70,106,248,1);
  border-radius:4px;
  margin-left: 5px;
}
.width10{margin-left: 10rpx;}
.width90{
  width: 82%;
 
  margin-right: 30rpx;
}
.margin20 image{width: 14rpx;height: 14rpx;margin-left: 10rpx;position: relative;bottom: 15rpx;}