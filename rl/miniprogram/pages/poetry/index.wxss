/* miniprogram/pages/poetry/index.wxss *//**index.wxss**/
page {
  height: 100%;
  background-color: #31DF9D;
  color: #fff;
}

.container {
  display: flex;
  background-repeat: no-repeat;
  background-position: right bottom;
}

.cover-wrapper {
  width: 700rpx;
  height: 35%;
  display: flex;
  justify-content: center;
}

.main-wrapper {
  width: 700rpx;
  height: calc(65% - 6rpx);
 
}

.progress-wrapper {
  height: 6rpx;
  width: 100%;
  background: #404040;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.calendar-wrapper {
  height: 66px;
  width: 100%;
  display: flex;
  justify-content: center;
}

.cover {
  width: calc(100% - 0px);
  height: calc(100% - 30rpx);
  border-radius: 50rpx;
  box-shadow: 10rpx 10rpx 10rpx 0 #404040;
}

.poetry-wrapper {
  height: 100%;
  width: 560rpx;
  display: inline-flex;
  align-items: center;
  justify-content: flex-start;
  position: relative;
}

.today-wrapper {
  height: 100%;
  width: 190rpx;
  display: inline-flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}

.progress-wrapper .label {
  background: #fff;
  height: 100%;
  border-top-right-radius: 3rpx;
  border-bottom-right-radius: 3rpx;
  box-shadow: 3rpx 0 1rpx rgb(67, 168, 238);
}

.master {
  height: 100%;
  width:95%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
}

.today-wrapper .en {
  font-size: 28rpx;
  line-height: 38rpx;
  color: #404040;
  font-weight: bold;
}

.today-wrapper {
  
}

.today-wrapper .yang {
  font-size: 130rpx;
  width: 100%;
  text-align: center;
  font-weight: 800;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 35%;
  text-shadow: 13rpx 0 1rpx rgb(67, 168, 238);
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.today-wrapper .yang.touch {
  box-shadow: 10rpx 10rpx 10rpx 1rpx #404040;
}

.today-wrapper .meta {
  font-size: 28rpx;
  line-height: 50rpx;
  color: #fff;
  font-weight: 500;
  letter-spacing: 3rpx;
  text-shadow: 5rpx 0 1rpx rgb(67, 168, 238);
}

.today-wrapper .holiday {
  height: 70rpx;
  display: flex;
  align-items: center;
}

.holiday .under {
  border-bottom: 2rpx solid rgb(67, 168, 238);
}

.today-wrapper .year {
  font-size: 36rpx;
  color: #404040;
  height: 50rpx;
  align-items: flex-end;
}

.today-wrapper .right {
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: flex-end;
}

.under {
  text-align: left;
}

.en .under {
  width: 100%;
}

.poetry-content {
  background: #F3F5F7;
  border-radius: 20px;
  box-shadow: 10rpx 10rpx 10rpx 0 #404040;
  min-height: 80%;
  min-width: 80%;
  max-height: 90%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  padding: 20rpx 0;
  overflow: auto;
  position: absolute;
  right: 0;
}

.poetry-content.mini {
  height: 20%;
  width: 20%;
}

.poetry-content.mini.uu {
  height: 20%;
  width: 20%;
}

.poetry-content.uu {
  flex-direction: column;
  align-items: flex-end;
}

.poetry-meta {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  align-items: flex-start;
  min-width: 80%;
}

.uu .poetry-meta {
  margin-bottom: 50rpx;
  align-items: flex-end;
  width: 100%;
}

.poetry-content {
  letter-spacing: 5rpx;
  font-size: 28rpx;
  font-weight: 800;
  line-height: 40rpx;
  color: #404040;
}

.uu.poetry-content .poetry-inner {
  text-align: start;
  writing-mode: vertical-rl;
  -moz-writing-mode: vertical-rl;
  -webkit-writing-mode: vertical-rl;
  -o-writing-mode: vertical-rl;
  -ms-writing-mode: tb-rl;
  _writing-mode: tb-rl;
}


.title-inner {
  letter-spacing: 3rpx;
  font-size: 32rpx;
  text-align: left;
  border-left: unset;
  background: #ffe411;
  padding: 5rpx 16rpx;
  border-radius: 30rpx;
  text-shadow: 4rpx 0 2rpx rgb(67, 168, 238);
  margin-bottom: 10rpx;
}


.author-inner {
  text-align: center;
  letter-spacing: 1rpx;
  font-size: 28rpx;
  padding-top: 5rpx;
  padding-bottom: 3rpx;
  margin-left: 16rpx;
  border-bottom: 2rpx solid rgb(67, 168, 238);
}

.uu .author-inner {
  margin-right: 16rpx;
}

.calendar {
  display: flex;
  height: 80rpx;
  width: calc(100% - 32px);
  border-top: 1px dashed #95e1d3;
  border-bottom: 1px dashed #95e1d3;
}

.calendar .item:first-child {
  border-left: 1px dashed #95e1d3;
  width: calc(14.285% - 2px);
}

.calendar .item {
  border-right: 1px dashed #95e1d3;
  width: calc(14.285% - 1px);
  font-size: 20rpx;
  font-weight: 300;
}

.calendar .item.active {
  color: #5c4d4d;
  font-weight: bold;
  background: rgba(255,255,255,0.3);
}

.calendar .item .yang, .calendar .item .nong {
  width: 100%;
  height: 25px;
  text-align: center;
  display: flex;
  justify-content: center;
}

.calendar .item .yang {
  font-size: 14px;
  align-items: flex-end;
}

.calendar .item .nong {
  font-size: 14px;
  align-items: flex-start;
}