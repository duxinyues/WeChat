@import '../communal/communal.wxss';
.course{
  margin:30rpx 30rpx; 
}
.courses1 .course-title>text{
  font-size:20px;
  font-family:PingFangSC-Medium;
  font-weight:500;
  line-height:21px;
}
.course-title{
  display: flex;
  justify-content:space-between;
  margin: 20rpx 0;
}
.course-title>text{
  font-size:20px;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:21px;
}
.course-title>navigator{
  font-size:12px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:21px;
}
.course-body-content image{
  width: 100%;
  height: 260rpx;
  border-radius: 6px 6px 0 0;
}
.course-body-content{
  padding-bottom: 20rpx;
  box-sizing: border-box; 
  border-radius: 6px;
  border:1px solid rgba(238,238,238,1);
  box-shadow:0px 2px 7px 0px rgba(204,204,204,0.22);
}
.courses1 .course-body-content{
  width: 338rpx;
  height: 380rpx;
}
.courser-content-image{
  width: 338rpx;
  height: 262rpx;
}
.courses3 .course-body-content{
  width: 100%;
}
.courses4 .course-body-content{
  width: 100%;
}
.course-body-content-title{
  padding: 0 20rpx;
  font-size:14px;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:21px;
  margin-bottom:10rpx; 
}
.course-body{
  display: flex;
  justify-content:space-between;
}
.course-body-content-info{
  display: flex;
  justify-content:space-between;
  padding: 0 10rpx;
}
.time{
  font-size:12px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:21px;
}
.money{
  font-size:15px;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(255,51,51,1);
  line-height:21px;
}